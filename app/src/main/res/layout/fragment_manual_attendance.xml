<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/groupCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:layout_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="@dimen/_20sdp"
        android:padding="12dp">
        <!-- Group -->
        <EditText
            android:id="@+id/etGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:background="@null"
            android:cursorVisible="false"
            android:padding="@dimen/_10sdp"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:drawablePadding="8dp"
            android:hint="Group"
            android:textSize="@dimen/_12ssp"
            android:focusable="false"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/locationCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/groupCardView"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="@dimen/_20sdp"
        android:padding="12dp">
        <!-- Group -->
        <EditText
            android:id="@+id/etLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:background="@null"
            android:cursorVisible="false"
            android:padding="@dimen/_10sdp"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:drawablePadding="8dp"
            android:hint="Location"
            android:textSize="@dimen/_12ssp"
            android:focusable="false"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/employeeCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/locationCardView"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_margin="@dimen/_20sdp"
        android:padding="12dp">
        <!-- Group -->
        <EditText
            android:id="@+id/etEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:background="@null"
            android:cursorVisible="false"
            android:padding="@dimen/_10sdp"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:drawablePadding="8dp"
            android:hint="Employee"

            android:textSize="@dimen/_12ssp"
            android:focusable="false"/>

    </com.google.android.material.card.MaterialCardView>



    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:textColor="@color/dark"
        app:layout_constraintTop_toBottomOf="@id/employeeCardView"
        android:text="Mark Attendance" />


</androidx.constraintlayout.widget.ConstraintLayout>