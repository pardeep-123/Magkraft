<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainAdmin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/maroon_black_gradient_bg"
    tools:context=".ui.AdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textGroup"
                android:text="Group"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginEnd="@dimen/_8sdp"
                android:background="@drawable/bg_grid_item"/>

            <TextView
                android:id="@+id/textLocation"
                android:text="Location"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/bg_grid_item"/>
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/textSetLocation"
                android:text="Set Location"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/bg_grid_item"/>

            <TextView
                android:id="@+id/textEmployees"
                android:text="Employees"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/bg_grid_item"/>
        </LinearLayout>

        <!-- Full width -->
        <TextView
            android:id="@+id/textViewReport"
            android:text="View Report"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:background="@drawable/bg_grid_item"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logoutBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_20sdp"
        android:background="@drawable/bg_grid_item"
        android:fontFamily="sans-serif-black"
        android:text="@string/logout"
        android:textColor="@color/mid_color"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/_12ssp" />

</androidx.constraintlayout.widget.ConstraintLayout>