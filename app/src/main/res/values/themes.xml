<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Magkraft" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/pink_color</item>
        <item name="colorSecondary">@color/purple_color</item>
        <item name="android:statusBarColor">@color/mid_color</item>
<!--        <item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="Theme.Magkraft" parent="Base.Theme.Magkraft" />

    <style name="styleTextInputEditText" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="GridItemText">
        <item name="android:layout_width">@dimen/_80sdp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/bg_grid_item</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="FilterField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_dropdown</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_down</item>
        <item name="android:drawablePadding">8dp</item>
    </style>
</resources>